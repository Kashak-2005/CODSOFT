import tkinter as tk
from tkinter import ttk

def click_button(value):
    current = entry_var.get()
    entry_var.set(current + value)

def clear():
    entry_var.set('')

def backspace():
    current = entry_var.get()
    entry_var.set(current[:-1])

def calculate():
    try:
        result = eval(entry_var.get())
        entry_var.set(result)
    except:
        entry_var.set('Error')
